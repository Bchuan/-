.concent{
  /* height: 100%; */
  
  position: relative;
  overflow: hidden;
}
.concent .yin{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}
.concent .song_info{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  
}
.concent .song_info .left{
  flex: auto;
  display: flex;
  height: 160rpx;
}


.concent .song_info .left image{
  height: 160rpx;
  width: 160rpx;
  margin-right: 30rpx;
  flex: none;
}
.concent .song_info .left .song{
  align-self: center;
}
.concent .song_info .left .song text{
  display: block;
  
}
.concent .song_info .left .song text:nth-child(1){
  font-size: 36rpx;
}
.concent .song_info .left .song text:nth-child(2){
  font-size: 28rpx;
}

.concent .song_info .right{
  height: 90rpx;
  width: 90rpx;
  align-self: center;
  border-radius:50%;
  border: 3rpx solid #fff; 
}
.concent .song_info .right .pl{
  height:0;
  width:0;
  margin:25rpx 20rpx 25rpx 30rpx;
  border-top:20rpx solid transparent;
  border-left:18px solid white;
  border-bottom:20rpx solid transparent;

}
.concent .song_info .right .pa{
  height: 40rpx;
  width: 20rpx;
  border-left:6rpx solid #fff;
  border-right:6rpx solid #fff;
  margin:25rpx 30rpx;
}

.concent .song_text{
  height: 700rpx; 
  width: 100%;
  margin-top: 100rpx;
}
.concent .foot{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
}
.concent .foot .contrl{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.concent .foot .contrl text{
  width: 150rpx;
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  color: #808080
}
.concent .foot .contrl .barPr{
  width: 100%;

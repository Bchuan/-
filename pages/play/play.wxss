}
.concent .foot .contrl .bar{
  height: 6rpx;
  width: 100%;
  background: #ccc;
  position: relative;
  margin:38rpx 0;
}
.concent .foot .contrl .bar .barP{
  position: absolute;
  height: 6rpx;
  /* width: 20rpx; */
  background: blueviolet;
  left: 0;
  top:0;
